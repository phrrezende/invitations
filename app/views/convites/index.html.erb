<p id="notice"><%= notice %></p>
<div class="col-md-10">
  <h1>Convites Cadastrados</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome Convidado</th>
      <th>Data entrega</th>
      <th>Usuário</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @convites.each do |convite| %>
      <tr>
        <td><%= convite.convidado.nome %></td>
        <td><%= convite.data_entrega.strftime("%d/%m/%Y") %></td>
        <td><%= convite.user.usuario %></td>
        <td><%= link_to 'Show', convite %></td>
        <td><%= link_to 'Edit', edit_convite_path(convite) %></td>
        <td><%= link_to 'Destroy', convite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Convite', new_convite_path %>
</div>
<div class="col-md-2">
  <div class="circle circle-border">
       <div class="circle-inner">
           <div class="score-text">
               <p> Total de Convidados</p>
               <p><%= @total_convidados %></p>
            </div>
       </div>
  </div>
 <div style="margin-top: 5px;" class="circle circle-border">
      <div class="circle-inner">
          <div class="score-text">
              <p> Total de Convites</p>
              <p><%= @total_convites %></p>
           </div>
      </div>
 </div>
</div>
